<html>
    <head>
        <style>
        
            th, td {
    padding-top: 5px;
    padding-bottom: 5px;
    padding-left: 5px;
    padding-right: 5px;
  }
  table {
    border-spacing: 20px;
    position: absolute;
    top: 60px;
  }
  .tb{
      border: 1px solid black;
      border-collapse: collapse;
  }
  th{
      border: 1px solid black;
      border-collapse: collapse;
      width: 465px;
      font-weight: bold;
  }
  td{
      border:1px solid black
  }
  h1{
      padding-top: 10px;
      background-color: blue;
      width:  1625px;
      text-align: center;
      border: 2px solid black;
  }
          </style>
        <body>
            <table class="tb">
                <h1>Order Table</h1>
                <tr>
                 <th class="inventory">Customer_id</th>
                 <th class="type">inventory_id</th>
                 <th class="name">Item Name</th>
                 <th class="quantity">Quantity</th>
                </tr>
                 <!-- </table> -->
            <% for (let i=0;i<order.length;i++) {%>
                    <tr>
                     <td><%= order[i].customer_id %></td>
                     <td><%= order[i].product_id %></td>
                     <td><%= order[i].Product_Name %></td>
                     <td><%= order[i].Quantity %></td>
                    </tr>                     
            <% } %>
        </table>
        </body>
    </head>
</html>