<html>
    <head>
        <style>
        
          th, td {
  padding-top: 5px;
  padding-bottom: 5px;
  padding-left: 5px;
  padding-right: 5px;
}
table {
  border-spacing: 20px;
  position: absolute;
  top: 60px;
}
.tb{
    border: 1px solid black;
    border-collapse: collapse;
}
th{
    border: 1px solid black;
    border-collapse: collapse;
    width: 465px;
      font-weight: bold;
}
td{
    border:1px solid black
}
h1{
    padding-top: 10px;
    background-color: blue;
    width:  1625px;
    text-align: center;
    border: 2px solid black;
}
        </style>
        <body>
            <table class="tb">
                <h1>Product Table</h1>
                <tr>
                 <th class="inventory">Product_id</th>
                 <th class="type">Product Type</th>
                 <th class="name">Product Name</th>
                 <th class="price">Product Price</th>
                 <th class="quantity">Product_quantity</th>
                </tr>
            <% for (let i=0;i<product.length;i++) {%>
                    <tr>
                     <td><%= product[i].product_id %></td>
                     <td><%= product[i].product_Type %></td>
                     <td><%= product[i].product_Name %></td>
                     <td><%= product[i].product_Price %></td>
                     <td><%= product[i].product_Quantity %></td>
                    </tr>      
            <% } %>
        </table>
        </body>
    </head>
</html>